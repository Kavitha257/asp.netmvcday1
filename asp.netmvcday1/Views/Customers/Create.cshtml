@model asp.netmvcday1.Models.Customer
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        //HtmlHelper.UnobtrusiveJavaScriptEnabled=false;
        @Html.AntiForgeryToken();
        <div class="form-group">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control", autocomplete = "off",required=true })
            @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.City)
            @Html.TextBoxFor(c => c.City, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.City)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.BirthDate)
            @Html.TextBoxFor(c => c.BirthDate, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.BirthDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Gender)
            @*@Html.DropDownListFor(c => c.Gender, null, new { @class = "form-control", autocomplete = "off" })*@
            @Html.DropDownListFor(c => c.Gender, ViewBag.Gender as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Gender)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.MembershipTypeId)
            @*@Html.DropDownList("mem", null, new { @class = "form-control", autocomplete = "off" })*@
            @Html.DropDownListFor(c => c.MembershipTypeId, ViewBag.MembershipTypeId as SelectList, new {@class="form-control"})
            @Html.ValidationMessageFor(c => c.MembershipTypeId)
        </div>
        <div>
            <input type="submit" name="cmdsubmit" value="Submit" />
        </div>
    }
</div>
